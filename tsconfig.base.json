{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "jsx": "react-jsx",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": false,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "."
  }
}
